#!/usr/bin/env node
'use strict'

const check = require('../util/check')
const localxdc = check.localExists('xdc')
const exec = require('../util/exec')

if (localxdc) {
  exec(
    require(require('path').join(process.cwd(), 'node_modules/xdc/bin/xdc-build')),
    process.argv.splice[1],
    {stdio: 'inherit'}
  )
} else {
  exec(
    require('xdc/bin/xdc-build'),
    process.argv.splice[1],
    {stdio: 'inherit'}
  )
}
