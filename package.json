    "node": ">=4.0.0",
    "npm": ">=3.0.0"
  },
  "devDependencies": {
    "ava": "^0.15.1",
    "coveralls": "^2.11.9",
    "lerna": "2.0.0-beta.26",
    "nyc": "^6.4.2",
    "webpack": "^2.1.0-beta.21",
    "xo": "^0.15.0"
