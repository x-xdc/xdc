#!/usr/bin/env node
'use strict'

const check = require('../util/check')
const localxdc = check.localExists('xdc')
const exec = require('../util/exec')

if (localxdc) {
  exec(
    'node_modules/bin/xdc',
    process.argv.splice[1],
    {stdio: 'inherit'}
  )
} else {
  exec(
    require('xdc/bin/xdc-watch'),
    process.argv.splice[1],
    {stdio: 'inherit'}
  )
}
